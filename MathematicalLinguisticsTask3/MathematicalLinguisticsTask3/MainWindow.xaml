<Window
    x:Class="MathematicalLinguisticsTask3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MathematicalLinguisticsTask3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="647"
    Height="214.677"
    DataContext="{StaticResource TuringMachine}"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Grid Margin="0,0,2,0">
        <Button
            x:Name="btnStep"
            Width="123"
            Height="58"
            Margin="367,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnStep_Click"
            Content="Step"
            FontSize="24" />
        <Button
            x:Name="btnInsertValue"
            Width="123"
            Height="25"
            Margin="219,146,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnInsertValue_Click"
            Content="Insert value"
            FontSize="18" />
        <Button
            x:Name="btnStartStop"
            Width="132"
            Height="58"
            Margin="495,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnStartStop_Click"
            Content="Start/Stop"
            FontSize="24" />
        <TextBox
            x:Name="txtState"
            Width="39"
            Height="36"
            Margin="10,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="24"
            Text="{Binding CurrentState.Name}"
            TextWrapping="Wrap" />
        <DataGrid
            x:Name="gridTape"
            Width="619"
            Height="44"
            Margin="8,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
            GridLinesVisibility="Vertical"
            HeadersVisibility="None"
            ItemsSource="{Binding Tapes}" />
        <Canvas>
            <Image
                x:Name="imgHead"
                Canvas.Left="{Binding HeadX}"
                Canvas.Top="15"
                Width="38"
                Height="32"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0.5"
                Source="Assets/indeks.png">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform X="90" />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
        <TextBox
            x:Name="txtValue"
            Width="123"
            Height="28"
            Margin="219,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="24"
            Text="{Binding CurrentState.Name}"
            TextWrapping="Wrap" />
    </Grid>
</Window>
